@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
	ViewBag.Title = Model.Value("pageTitle");

	var backgroundImage = Model?.Value<IPublishedContent>("heroBackgroundImage")?.Url() ?? "";
	var signatureImage = Model?.Value<IPublishedContent>("aboutSignatureImage")?.Url() ?? "";
	var box1Image = Model?.Value<IPublishedContent>("box1Image")?.Url() ?? "";
	var box2Image = Model?.Value<IPublishedContent>("box2Image")?.Url() ?? "";
	var box3Image = Model?.Value<IPublishedContent>("box3Image")?.Url() ?? "";
	var box4Image = Model?.Value<IPublishedContent>("box4Image")?.Url() ?? "";
	var box5Image = Model?.Value<IPublishedContent>("box5Image")?.Url() ?? "";
	var box6Image = Model?.Value<IPublishedContent>("box6Image")?.Url() ?? "";
}

<section id="hero-slider" class="hero">
	<div class="background" style="background-image:url(@backgroundImage); background-size: cover; background-position: 60%;"></div>
	<div class="container">		
		<div class="hero-content">
			<h1 class="headline">@Model?.Value("heroHeadline")</h1>
			<p class="ingress">@Model?.Value("heroText")</p>
			<div>
				<a href="@Model?.Value("heroButtonUrl")" class="btn btn-primary">@Model?.Value("heroButtonText")</a>
			</div>
		</div>		
	</div>
</section>
                    
<section id="about-us" class="about-us bg-light">
	<div class="container">
		<div class="content">
			<div class="headline">
				<h6>@Model?.Value("aboutSectionTitle")</h6>
				<h2>@Model?.Value("aboutHeadline")</h2>
			</div>
			<blockquote class="quote">@Model?.Value("aboutQuote")</blockquote>
			<p>@Model?.Value("aboutText")</p>
			<div class="signature-container">
				<div class="signature">
					<img class="signature-image" src="@signatureImage" alt="@Model?.Value("aboutSignature")">
					<div class="clarification">
						<p class="name">@Model?.Value("aboutSignature")</p>
					</div>
				</div>
			</div>
		</div>

		<div class="form-container">
			
		</div>	
	</div>
</section>

<section id="our-services" class="services bg-gray">
	<div class="container">
		<div class="headline">
			<h6>@Model?.Value("servicesTitle")</h6>
			<h2>@Model?.Value("servicesHeadline")</h2>
		</div>
		<div class="service-boxes">
			<div class="box-content bg-light">
				<h5>@Model?.Value("box1Headline")</h5>
				<img src="@box1Image" alt=""> 
				<p>@Model?.Value("box1Text")</p>
			</div>
			<div class="box-content bg-light">
				<h5>@Model?.Value("box2Headline")</h5>
				<img src="@box2Image" alt=""> 
				<p>@Model?.Value("box2Text")</p>
			</div>
			<div class="box-content bg-light">
				<h5>@Model?.Value("box3Headline")</h5>
				<img src="@box3Image" alt=""> 
				<p>@Model?.Value("box3Text")</p>
			</div>
			<div class="box-content bg-light">
				<h5>@Model?.Value("box4Headline")</h5>
				<img src="@box4Image" alt=""> 
				<p>@Model?.Value("box4Text")</p>
			</div>
			<div class="box-content bg-light">
				<h5>@Model?.Value("box5Headline")</h5>
				<img src="@box5Image" alt=""> 
				<p>@Model?.Value("box5Text")</p>
			</div>
			<div class="box-content bg-light">
				<h5>@Model?.Value("box6Headline")</h5>
				<img src="@box6Image" alt=""> 
				<p>@Model?.Value("box6Text")</p>
			</div>
		</div>                
	</div>
</section>